@model IEnumerable<PhotosGallerySPA.Domain.Dtos.Photo.PhotoDto>
<partial name="_Navbar" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <a class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#globalModal" onclick="loadPartialInModal('Photo/_CreatePhoto')">Create</a>
        </div>
    </div>
    <div class="row">
        @foreach (var photo in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img data-bs-toggle="modal" data-bs-target="#imageModal" src="data:image/jpeg;base64,@Convert.ToBase64String(photo.Image)" class="card-img-top img-thumbnail fixed-size" alt="@photo.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@photo.Title</h5>
                        <p class="card-text">@photo.Description</p>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-outline-danger btn-sm">Remove</a>
                </div>
            </div>
        }
    </div>
</div>